<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض المستخدمين</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/72c37618a7.js" crossorigin="anonymous"></script>

</head>
<body class="bg-gray-100">
    <%- include('includes/navbar') %>

    <div class="container mx-auto p-8">
        <h2 class="text-3xl font-bold text-center text-green-700 mb-8">show texts</h2>
        <div class="bg-green-100 p-6 rounded-lg shadow-lg">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <!-- User Card 1 -->
                <% if (texts.length > 0) { %>
                    <% texts.forEach(text => { %>
                        <div class="bg-white p-4 rounded-lg shadow-lg flex flex-col items-center">
                            <h3 class="text-xl p-6 font-bold text-green-700"><a href="show/<%= text._id %>"><%= text.text %></a></h3>
                            <div class="space-x-4">
                                <a  class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" href="edit/<%= text._id %>">
                                    <i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i>
                                <a  class="bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" href="/delete/<%= text._id %>">
                                    <i class="fa-solid fa-trash" style="color: #ffffff;"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                <% }else{ %>
                    <h1 class="text-xl p-3  font-bold text-red-700">no text</h1>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
